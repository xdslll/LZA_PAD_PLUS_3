<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新闻动态"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/ebook_list_module_title"
            android:paddingLeft="30dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:id="@+id/news_home_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="更多"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/ebook_list_module_title"
            android:layout_marginRight="30dp"
            android:background="@drawable/common_bg"
            android:gravity="bottom"
            android:id="@+id/news_home_more"
            />
    </LinearLayout>
    <com.lza.pad.widget.IrregularNews
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/news_irregular_news"
        />
</LinearLayout>