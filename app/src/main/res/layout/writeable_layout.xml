<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center"
    android:background="@color/white">
    <!--<com.lza.pad.widget.LibraryMap
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/writeable_layout"
        />-->
    <com.lza.pad.widget.WritableView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/writeable_layout_canvas"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:id="@+id/writeable_layout_save"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:id="@+id/writeable_layout_clear"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还原"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:id="@+id/writeable_layout_restore"
            />
    </LinearLayout>

</LinearLayout>