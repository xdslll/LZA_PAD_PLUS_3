<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="幻想图书馆"
            android:textSize="@dimen/content_container_title_size"
            android:textColor="@color/common_blue"
            android:layout_weight="1"
            android:id="@+id/ebook_content_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"
            android:textSize="@dimen/content_container_close_size"
            android:textColor="@color/common_gray"
            android:background="@drawable/common_bg"
            android:id="@+id/ebook_content_close"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_light_gray"
        android:layout_marginBottom="10dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ebook_content_container"
        />
</LinearLayout>