<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center"
    android:padding="5dp">
    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="@dimen/title_menu_item_ico_width"
        android:layout_height="@dimen/title_menu_item_ico_width"
        android:scaleType="fitXY"
        android:background="@color/transparent"
        android:id="@+id/title_menu_item_ico"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/ebook_content_tip_size"
        android:textColor="@color/common_blue"
        android:id="@+id/title_menu_item_text"
        />
</LinearLayout>