<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="WIFI热点测试"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:background="@color/translucenter_dark"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="当前热点状态："
                android:textColor="@color/black"
                android:textSize="25sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="关闭"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:textStyle="bold"
                android:id="@+id/wifi_hotpot_ap_state"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="SSID："
                android:textColor="@color/black"
                android:textSize="25sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="无"
                android:textColor="@color/green"
                android:textSize="28sp"
                android:textStyle="bold"
                android:id="@+id/wifi_hotpot_ap_ssid"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="密钥："
                android:textColor="@color/black"
                android:textSize="25sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="无"
                android:textColor="@color/green"
                android:textSize="28sp"
                android:textStyle="bold"
                android:id="@+id/wifi_hotpot_ap_password"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开热点"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:id="@+id/wifi_hotpot_open"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="WIFI功能测试"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:background="@color/translucenter_dark"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="当前Wifi状态："
            android:textColor="@color/black"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="关闭"
            android:textColor="@color/red"
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/wifi_hotpot_state"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启Wifi"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:id="@+id/wifi_hotpot_connect"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扫描Wifi"
        android:padding="5dp"
        android:id="@+id/wifi_hotpot_scan"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wifi_hotpot_wifi_list"
        />
</LinearLayout>