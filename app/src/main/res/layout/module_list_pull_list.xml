<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="38dp"
                android:textColor="@color/common_blue"
                android:background="@drawable/common_bg"
                android:padding="5dp"
                android:id="@+id/module_home"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&gt;"
                android:textSize="38dp"
                android:textColor="@color/common_blue"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子书"
                android:textSize="38dp"
                android:textColor="@color/common_blue"
                android:padding="5dp"
                android:layout_weight="1"
                android:id="@+id/module_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部学科"
                android:textSize="30dp"
                android:textColor="@color/common_grey"
                android:padding="5dp"
                android:background="@drawable/common_bg"
                android:maxLength="10"
                android:visibility="gone"
                android:id="@+id/module_type"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="30dp"
                android:textColor="@color/common_light_gray"
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/module_divider"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textSize="30dp"
                android:textColor="@color/common_grey"
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/module_search"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/common_blue"
            />
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#19000000"
        android:dividerHeight="4dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        android:id="@+id/module_refresh_list"
        />
</LinearLayout>