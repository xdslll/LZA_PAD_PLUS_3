<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchMode="columnWidth"
        android:numColumns="4"
        android:background="@color/white"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:gravity="center"
        android:id="@+id/common_grid_grid"
        />
    <TextView
        android:layout_width="30dp"
        android:layout_height="95dp"
        android:background="@drawable/background_next_page"
        android:text="下\n一\n页\n"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="0dp"
        android:paddingLeft="@dimen/tiny_padding"
        android:paddingRight="0dp"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/common_grid_next_page"
        />
    <TextView
        android:layout_width="30dp"
        android:layout_height="95dp"
        android:background="@drawable/background_prev_page"
        android:text="上\n一\n页\n"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/tiny_padding"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/common_grid_prev_page"
        />
</RelativeLayout>