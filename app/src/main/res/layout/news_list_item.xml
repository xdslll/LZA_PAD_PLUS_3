<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">
    <ImageView
        android:layout_width="@dimen/news_list_item_img_width"
        android:layout_height="@dimen/news_list_item_img_height"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:id="@+id/news_list_item_img"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:textColor="@color/common_blue"
                android:maxLines="1"
                android:ellipsize="none"
                android:layout_weight="1"
                android:id="@+id/news_list_item_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:textSize="20sp"
                android:textColor="@color/common_gray"
                android:maxLines="1"
                android:ellipsize="none"
                android:id="@+id/news_list_item_date"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:textSize="20sp"
            android:textColor="@color/common_gray"
            android:maxLines="4"
            android:ellipsize="none"
            android:lineSpacingExtra="2dp"
            android:id="@+id/news_list_item_content"
            />
    </LinearLayout>
</LinearLayout>