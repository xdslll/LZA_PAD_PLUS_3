<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:scrollbarStyle="outsideOverlay"
    android:id="@+id/ebook_content_overview_scroll">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="简介"
                android:textSize="@dimen/ebook_content_value_size"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/common_dark_gray"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/common_bg"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:id="@+id/ebook_content_overview_abstract_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:text="查看更多"
                android:textSize="@dimen/ebook_content_tip_size"
                android:textColor="@color/common_blue"
                android:clickable="true"
                android:background="@drawable/common_bg"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:id="@+id/ebook_content_overview_abstract_more"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ebook_content_key_size"
        android:textColor="@color/common_gray"
        android:maxLines="5"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:id="@+id/ebook_content_overview_abstract"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_card"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="目录"
                android:textSize="@dimen/ebook_content_value_size"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/common_dark_gray"
                android:textStyle="bold"
                android:background="@drawable/common_bg"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:id="@+id/ebook_content_overview_content_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:text="查看更多"
                android:textSize="@dimen/ebook_content_tip_size"
                android:textColor="@color/common_blue"
                android:clickable="true"
                android:background="@drawable/common_bg"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:id="@+id/ebook_content_overview_content_more"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ebook_content_key_size"
        android:textColor="@color/common_gray"
        android:maxLines="5"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:id="@+id/ebook_content_overview_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="热门书评"
                android:textColor="@color/common_dark_gray"
                android:textSize="@dimen/ebook_content_value_size"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:drawablePadding="5dp"
                android:background="@drawable/common_bg"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:id="@+id/ebook_content_overview_douban_reviews_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray"
                android:text="（0条）"
                android:textSize="@dimen/ebook_content_tip_size"
                android:layout_marginLeft="100dp"
                android:id="@+id/ebook_content_overview_douban_reviews_count"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="查看更多"
                android:textSize="@dimen/ebook_content_tip_size"
                android:textColor="@color/common_blue"
                android:clickable="true"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:background="@drawable/common_bg"
                android:id="@+id/ebook_content_overview_douban_reviews_all"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            />
        <com.lza.pad.widget.ListViewForScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="#19000000"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:smoothScrollbar="true"
            android:id="@+id/ebook_content_overview_douban_reviews"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
</RelativeLayout>