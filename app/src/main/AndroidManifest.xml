<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.lza.pad">

    <uses-sdk android:maxSdkVersion="21"
        android:minSdkVersion="15"
        android:targetSdkVersion="15"/>
    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/ic_launcher" android:name=".app.MainApplication"
        android:theme="@style/BaseTheme">
        <activity android:name=".app.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".app.HomeActivity" android:screenOrientation="portrait"/>
        <activity android:name=".app.ContentActivity" android:screenOrientation="portrait"
            android:theme="@style/DialogTheme"/>
    </application>

</manifest>
